<h1><%= user.firstname %>'s Favortie Artist's</h1>



<div class="row">
	<div class="col s3">
		<div>
			<img src="<%= user.image %>">
		</div>
		<div>
			<p><strong>Full Name:</strong> <%= user.firstname %> <%= user.lastname %></p>
			<p><strong>User Name:</strong> <%= user.username %></p>
</div>
	</div>
		</div>



<div>
	<% tracks.forEach(function(trackid) { %>
		<h2>Single Name: <%=trackid.name%> </h2>
			<h3>Popularity Number: <%= trackid.popnum %> </h3>
				<div class="img-container">
					<img class="responsive-img" src="<%= trackid.image %>">
	<form method="POST" action="fav-tracks?_method=DELETE">
		<input  type="hidden" name="trackId" value="<%= trackid.id %>">
		   <button class="btn btn-primary delete" type="submit" name="Delete Artist">Delete Track</button>
		
    </form>		
</div>		



<% }) -%>
